$headerIconSize = 22px

.site-header
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  max-width: 1100px
  padding: 0.5em 1em
  margin: 0 auto


.site-branding
  height: $headerIconSize
  padding-left: $headerIconSize + 6px

  color: $textColor
  font-size: 1em
  line-height: $headerIconSize
  background: url(../images/brand-icon.png) no-repeat left center
  background-size: $headerIconSize $headerIconSize

  &.minimal
    width $headerIconSize
    padding-left 0
    color transparent

// Override any link styling
.site-branding-link
  cancelLinkHover()


.site-header--right
  display: flex

  > *
    margin-left: 1em

    &:first-child
      margin-left: 0


// Center it!
.app-sidebar .site-branding
  margin: 0 auto 2em
  width: 124px
