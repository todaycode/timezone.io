$headerIconSize = 22px

.site-header
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  max-width: 1100px
  padding: 0.5em 1em
  margin: 0 auto

  
.site-branding
  height: $headerIconSize
  padding-left: $headerIconSize + 6px
  
  font-size: 1em
  line-height: $headerIconSize
  background: url(/images/brand-icon.png) no-repeat left center
  background-size: $headerIconSize $headerIconSize