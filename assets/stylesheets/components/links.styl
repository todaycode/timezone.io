a,
a:visited
  position: relative;
  text-decoration: none;
  color: $linkColor
  transition: all 250ms ease;
  cursor: pointer

  &::after
    content: ""
    position: absolute
    width: 96%
    height: 1px
    bottom: 0
    left: 0
    right: 0
    margin: 0 auto
    background-color: $linkColor
    opacity: 0
    transition: all .3s ease-in-out 0s
    transform: translateY(4px)

  &:hover::after
    opacity: 1
    transform: translateY(2px)


cancelLinkHover()
  &::after
    display: none
    width: 0
    height: 0
