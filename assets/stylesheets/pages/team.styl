.app-container
  display: flex
  min-width: 880px
  
$sideBarMargin = 20px;

.app-sidebar
  flex-shrink: 0
  min-width: 200px
  max-width: 400px
  padding: 2em 1em 1em
  background: $fillColor

.app-sidebar--time
  margin: 0
  font-size: 2em
  text-align: center
  font-weight: normal
  
.app-sidebar--button-row
  display: flex
  justify-content: space-between
  


.timezone-list
  display: flex
  height: 100%;
  justify-content: center
  flex-grow: 1 // this grows, the sidebar is a fixed width

.timezone
  padding: 1em
  
// .timezone-major
  
.timezone-people
  display: flex
  
.timezone-people-column
  min-width: $avatarSize
  margin-right: 1em

// Timezones that are in nighttime
for hour in 0 1 2 3 4 5 6 7 22 23
  .timezone-hour-{hour}
    .avatar
      filter: grayscale(50%) brightness(0.8)

.timezone-header
  margin: 0.5em 0
  width: 80px
  text-align: left
  white-space: nowrap;
  
  p
    margin: 5px 0
    overflow: hidden
    text-overflow: ellipsis

.timezone-time
  margin: 5px 0
  font-weight: normal
  
.timezone-name
  font-size: 0.6em
  text-transform: uppercase
  font-weight: bold
  color: lighten($textColor, 20%)

.timezone-offset
  margin: 0
  font-size: 0.7em
  color: #61676F

.person
  position: relative
  margin: 0.8em 0

  &:hover
    .person-info
      opacity: 1

.person-info
  position: absolute
  left: -20%
  right: -20%
  bottom: -2em
  z-index: 1000
  width: 140%
  max-width: 110px
  max-height: 3em
  margin: 0 auto
  padding: 0.3em 0.4em 0.4em

  opacity: 0
  transition: all 200ms
  background: #fff
  border-radius: 2px
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.12), 0 2px 4px rgba(0, 0, 0, 0.24)
  font-size: 0.8em
  font-weight: bold
  text-align: center

  p
    margin: 0
    line-height: 1.1em

  .person-name
    margin-bottom: 0.3em

.person-city
  font-size: 0.8em
  font-weight: normal
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden
