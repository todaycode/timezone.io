
.hp-headline
  margin-top: 0
  text-align: center
  font-weight: normal

.hp-section
  width: 100%;
  padding: 2em 0

  &.demo
    padding: 3em 0

    .timezone-list
      min-height: 264px // prevent jumping during render

  &.alt
    background: $fillColor

.hp-demo
  .timezone:last-of-type
    padding-right: 0

.hp-content-container
  max-width: 800px
  margin: 0 auto;
  padding: 0 16px

.hp-pitch-container
  text-align: center

.hp-pitch
  font-size: 1.1em
  line-height: 1.5em
  font-weight: normal
  // text-align: center

.hp-pitch-search
  position: relative
  display: inline-block
  height: 30px
  width: 60%
  max-width: 500px
  min-width: 240px
  padding: 0.3em 0.6em
  margin: 1em auto

  text-align: left
  background: #fff
  border: 1px solid #ccc
  font: 16px arial, sans-serif

.hp-description,
.hp-description-quote
  max-width: 580px
  margin: 1.2em auto

  line-height: 1.8em // move this to generic class

.mc-field-group
  margin: 1em 0



@media screen and (max-width: 320px)
  body
    font-size: 14px

  .hp-headline
      padding: 0 1em;

