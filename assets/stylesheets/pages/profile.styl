
.profile
  padding-top: 0

.profile-main
  max-width: 800px
  margin: 0 auto

.profile-avatar
  margin: 0.5em auto

.profile-details
  text-align: center

.profile-name
  margin: 0.3em 0
  font-size: 32px
  font-weight: normal

@keyframes loadingPulsate {
  0% { color: $brandColor }
  100% { color: $lightFillColor }
}

.profile-location
  margin: 0

.profile-location-clickable
  cursor: pointer

.profile-offset
  margin-left: 0.8em
  color: $mutedColor
  font-size: 0.8em
  line-height: 1em

.profile-row
  margin: 2em 0

.profile-team
  margin: 0 0.1em

.profile-edit
  text-align: center

.profile-avatar-options
  margin: 1em 0
  text-align: center

  // space out the children
  > span,
  > .button
    margin: 0 0.2em
    vertical-align: middle

.profile-edit-form
  margin-top: 2em

  .autocomplete
    display: inline-block

  .edit-person--timezone-display
    max-width: 364px
    margin: auto

.profile-use-location-button
  margin-left: 1em
